<head>
	<meta charset="utf-8">
	<title>Menu Hover Effect</title>

	<style>
		body {
			height: 100vh ;
			display: flex ;
			align-items: center ;
			justify-content: center ;
			overflow: hidden ;
			flex-direction: column ;
			background-color: #222 ;
		}

		ul {
			padding: 0 ;
			display: flex ;
		}

		ul li {
			list-style: none ;
			padding: 10px 40px ;
		}

		ul li a {
			text-decoration: none ;
			text-transform: uppercase ;
			font-size: 24px ;
			color: #fff ;
			position: relative ;
			padding: 5px ;
		}

		a:hover {
			color: #ff0 ;
		}

		span:first-child::before, span:first-child::after,
		span:last-child::before, span:last-child::after {
			content: '' ;
			position: absolute ;
			width: 8px ;
			height: 8px ;
			background-color: transparent ;
			transition: 0.2s ;
			opacity: 0 ;
		}

		span:first-child::before {
			border-top: 2px solid #ff0 ;
			border-left: 2px solid #ff0 ;
			top: 0 ;
			left: 0 ;
		}

		span:first-child::after {
			border-top: 2px solid #ff0 ;
			border-right: 2px solid #ff0 ;
			top: 0 ;
			right: 0 ;
		}

		span:last-child::before {
			border-bottom: 2px solid #ff0 ;
			border-left: 2px solid #ff0 ;
			bottom: 0 ;
			left: 0 ;
		}

		span:last-child::after {
			border-bottom: 2px solid #ff0 ;
			border-right: 2px solid #ff0 ;
			bottom: 0 ;
			right: 0 ;
		}

		a:hover span:first-child::before {
			top: -10px ;
			left: -10px ;
		}

		a:hover span:first-child::after {
			top: -10px ;
			right: -10px ;
		}

		a:hover span:last-child::before {
			bottom: -10px ;
			left: -10px ;
		}

		a:hover span:last-child::after {
			bottom: -10px ;
			right: -10px ;
		}

		a:hover span::before, a:hover span::after {
			opacity: 1 ;
		}
	</style>
</head>

<body>
	<ul>
		<% %w(home about services contact).each do |text| %>
				<li>
					<a href="#">
						<%= text %>
						<span></span>
						<span></span>
					</a>
				</li>
		<% end %>
	</ul>
</body>
