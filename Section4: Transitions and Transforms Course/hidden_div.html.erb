<head>
	<meta charset="utf-8">
	<title>Anchors inside Nested Divs</title>
	<style>
		body {
			display: flex ;
			justify-content: center ;
			align-items: center ;
			flex-direction: column ;
			height: 100vh ;
		}

		.btn {
			text-decoration: none ;
			background-color: #00A32C ;
			color: transparent ;
			display: block ;
			font-size: 20px ;
			border: 3px solid #00A32C ;
			border-radius: 4px ;
			margin-bottom: 4px ;
			padding: 10px 20px ;
			overflow: hidden ;
			position: relative ;
		}

		.btn::before, .btn::after {
			content: attr(data-content) ;
			position: absolute ;
			top: 0 ;
			left: 0 ;
			height: 100% ;
			width: 100% ;
			display: flex ;
			justify-content: center ;
			place-items: center ;
			color: #fff ;
			transition: all 0.5s ease ;
		}

		.btn::after {
			transform: translate(-100%, 100%) ;
		}

		.btn:hover::before {
			transform: translate(100%, -100%) ;
		}

		.btn:hover::after {
			transform: translate(0%, 0%) ;
		}

		div {
			filter: drop-shadow(2px 2px 2px #22222277) ;
		}
	</style>
</head>

<body>
	<a class="btn" data-content="Hover Me">Hover Me</a>
	<a class="btn" data-content="Hover Me">Hover Me</a>

	<% 50.times do %>
		<div>
			<a class="btn" data-content="Hover Me">Hover Me</a>
		</div>
	<% end %>
</body>
