<head>
	<meta charset="utf-8">
	<title>Menu Hover Effect</title>

	<style>
		body {
			height: 100vh ;
			display: flex ;
			align-items: center ;
			justify-content: center ;
			overflow: hidden ;
			flex-direction: column ;
			background-color: #fff ;
		}

		ul {
			margin: 0 ;
			padding: 0 ;
			display: flex ;
		}

		ul li {
			list-style: none ;
			padding: 10px 40px ;
		}

		ul li a {
			position: relative ;
			display: block ;
			text-decoration: none ;
			padding: 15px 30px ;
			text-transform: uppercase ;
			font-size: 22px ;
			color: #222 ;
			font-weight: bold ;
			transition: 0.5s ;
		}

		a::before {
			content: '' ;
			position: absolute ;
			top: 0 ;
			left: 0 ;
			width: 100% ;
			height: 100% ;
			opacity: 0 ;
			transform: scaleY(2) ;
			transition: 0.5s ease ;
			border-top: 2px solid #000 ;
			border-bottom: 2px solid #000 ;
		}

		a::after {
			content: '' ;
			position: absolute ;
			top: 2px ;
			left: 0 ;
			width: 100% ;
			height: 100% ;
			background-color: #222 ;
			transition: 0.5s ;
			z-index: -1 ;
			transform: scale(0) ;
		}

		a:hover::before {
			transform: scaleY(1.2) ;
			opacity: 1 ;
		}

		a:hover::after {
			transform: scale(1) ;
		}

		a:hover {
			color: #fff ;
		}
	</style>
</head>

<body>
	<ul>
		<% %w(home about services contact).each do |text| %>
				<li>
					<a href="#">
						<%= text %>
					</a>
				</li>
		<% end %>
	</ul>
</body>
