<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale:1">
	<title>Image Hover Effect</title>

	<style>
		body {
			margin: 0 ;
			padding: 0 ;
			height: 100vh ;
			display: flex ;
			justify-content: center ;
			align-items: center ;
			background-color: #222 ;
		}

		.container {
			position: relative ;
			width: 800px ;
			height: 500px ;
			background-color: #111 ;
		}

		.clip {
			position: absolute ;
			top: 0 ;
			left: 0 ;
			width: 100% ;
			height: 100% ;
			transition: all 0.5s ;
		}

		.clip1, .clip2, .clip3 {
			background-size: cover !important ;
			background-position: center !important ;
		}

		.clip1 {
			background: url("assets/img.jpg") ;
			clip-path: polygon(0 0, 17% 0, 49% 100%, 0 100%) ;
		}

		.clip2 {
			background: url("assets/img2.jpg") ;
			clip-path: polygon(10% 0, 80% 0, 70% 100%, 36% 100%) ;
		}

		.clip3 {
			background: url("assets/img3.jpg") ;
			clip-path: polygon(79% 0, 100% 0, 100% 100%, 60% 100%) ;
		}

		.container:hover .clip {
			clip-path: polygon(100% 0, 100% 0, 100% 100%, 100% 100%) ;
		}

		.container .clip:hover {
			clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%) ;
		}
	</style>
</head>

<body>
	<div class="container">
		<div class="clip clip1">
		</div>

		<div class="clip clip2">
		</div>

		<div class="clip clip3">
		</div>
	</div>
</body>
