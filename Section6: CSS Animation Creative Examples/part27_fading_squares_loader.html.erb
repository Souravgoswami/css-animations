<head>
	<meta charset="utf-8">
	<title>Fading Square Loader</title>

	<style>
		body {
			margin: 0 ;
			display: flex ;
			align-items: center ;
			justify-content: center ;
			height: 100vh ;
			background-color: #282E33 ;
		}

		.loader {
			position: relative ;
			width: 90px ;
			height: 90px ;
			display: flex ;
			flex-direction: column ;
			flex-wrap: wrap ;
		}

		span {
			width: 30px ;
			height: 30px ;
			position: relative ;
		}

		span::before {
			content: '' ;
			position: absolute ;
			top: 0 ;
			left: 0 ;
			width: 100% ;
			height: 100% ;
			background-color: #fff ;
			animation: loading 1s linear infinite ;
		}

		.s4::before, .s5::before, .s6::before {
			animation-delay: 0.125s ;
		}

		.s7::before, .s8::before, .s9::before {
			animation-delay: 0.25s ;
		}

		@keyframes loading {
			0% {
				width: 100% ;
				height: 100% ;
			}

			100% {
				width: 0 ;
				height: 0 ;
			}
		}
	</style>
</head>

<body>
	<div class="loader">
		<span class="s1"></span>
		<span class="s2"></span>
		<span class="s3"></span>
		<span class="s4"></span>
		<span class="s5"></span>
		<span class="s6"></span>
		<span class="s7"></span>
		<span class="s8"></span>
		<span class="s9"></span>
	</div>
</body>
