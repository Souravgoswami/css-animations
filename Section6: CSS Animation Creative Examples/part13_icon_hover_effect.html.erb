<head>
	<meta charset="utf-8">
	<title>Icon Hover Effect</title>

	<script src="assets/fontawesome.min.js"></script>
	<link rel="assets/fontawesome.min.css">

	<style>
		body {
			height: 100vh ;
			display: flex ;
			justify-content: center ;
			align-items: center ;
		}

		ul {
			padding: 0 ;
			margin: 0 ;
			display: flex ;
		}

		ul li {
			list-style-type: none ;
			width: 120px ;
			height: 120px ;
			margin: 0 20px ;
			border: 2px solid #55a ;
			border-radius: 50% ;
			transition: all 0.5s ease ;
			position: relative ;
			display: flex ;
			justify-content: center ;
			align-items: center ;
		}

		ul li .icon {
			font-size: 48px ;
			color: #55f ;
			transition: all 0.5s ;
		}

		ul li::before {
			content: '' ;
			position: absolute ;
			top: 0 ;
			left: 0 ;
			width: 100% ;
			height: 100% ;
			background-color: #55f ;
			border-radius: 50% ;
			z-index: -1 ;
			transition: all 0.5s ease ;
			opacity: 0 ;
		}

		ul li:hover::before {
			opacity: 1 ;
			transform: scale(0.8) ;
		}

		ul li:hover .icon {
			color: #fff ;
		}

		ul li::after {
			content: '' ;
			position: absolute ;
			top: 0 ;
			left: 0 ;
			width: 100% ;
			height: 100% ;
			background-color: transparent ;
			border: 2px dashed #55f ;
			box-sizing: border-box ;
			border-radius: 50% ;
			z-index: -1 ;
			opacity: 0 ;
			transform: scale(1) ;
			transition: all 1s ease ;
		}

		@keyframes rotating {
			0% {
				transform: scale(0.92) rotate(0deg) ;
			}

			100% {
				transform: scale(0.92) rotate(360deg) ;
			}
		}

		li:hover::after {
			opacity: 1 ;
			transform: scale(0.92) rotate(0deg) ;
			animation: rotating 10s linear infinite 0.25s ;
		}

	</style>
</head>

<body>
	<ul>
		<li><i class="icon fas fa-heart"></i></li>
		<li><i class="icon fas fa-glass-martini"></i></li>
		<li><i class="icon fas fa-globe"></i></li>
		<li><i class="icon fas fa-gift"></i></li>
	</ul>
</body>
