<head>
	<meta charset="utf-8">
	<title>Lighting Text HTML 2</title>

	<style>
		body {
			height: 100vh ;
			display: flex ;
			justify-content: center ;
			align-items: center ;
			background-color: #222 ;
		}

		ul {
			margin: 0 ;
			padding: 0 ;
			display: flex ;
		}

		ul li {
			list-style: none ;
			color: #444 ;
			font-size: 80px ;
			letter-spacing: 25px ;
			font-family: alice ;
			animation: lighting 1.4s linear infinite ;
		}

		@keyframes lighting {
			0%, 100% {
				color: #444 ;
				text-shadow: none ;
			}

			40% {
				color: #ff0 ;
				text-shadow: 0 0 8px #ff0, 0 0 50px #ff2 ;
			}
		}

		<% 'IGHTING'.each_char.with_index do |x, i| %>
			ul li:nth-child(<%= i + 2 %>) {
				animation-delay: <%= i.+(1) / 10.0 %>s ;
			}
		<% end %>
	</style>
</head>

<body>
	<ul>
		<li>L</li>
		<li>I</li>
		<li>G</li>
		<li>H</li>
		<li>T</li>
		<li>I</li>
		<li>N</li>
		<li>G</li>
	</ul>
</body>
